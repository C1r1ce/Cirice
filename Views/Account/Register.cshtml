@model Cirice.Data.ViewModels.RegisterViewModel
<div id="logreg-forms">
        <form class="form-signup" method="post" asp-controller="Account" asp-action="Register">
            <div asp-validation-summary="ModelOnly"></div>
            <input  asp-for="Name" id="user-name" class="form-control" placeholder="Full name" required="" autofocus="">
            <span asp-validation-for="Name"></span>
            <input asp-for="Email" id="user-email" class="form-control" placeholder="Email address" required autofocus="">
            <span asp-validation-for="Email"></span>
            <input asp-for="Password" id="user-pass" class="form-control" placeholder="Password" required autofocus="">
            <span asp-validation-for="Password"></span>
            <input asp-for="PasswordConfirm" id="user-repeatpass" class="form-control" placeholder="Repeat Password" required autofocus="">
            <span asp-validation-for="PasswordConfirm"></span>
            <button class="btn btn-primary btn-block" type="submit"><i class="fas fa-user-plus"></i> Sign Up</button>
            <a asp-action="Login"><i class="fas fa-angle-left"></i> Back</a>
        </form>
    </div>
